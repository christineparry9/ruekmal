<!DOCTYPE html>
<html>
  <head>
    <title>Rueckmal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body data-controller="timer">

    <div class="wrapper" >
    <div class="n ">
        <nav class="navbar navbar-expand-lg navbar-light">

          <div class="counter">

            <form name="form_main">
              <div class="digits">
                <span id="hour" class="timerdigits" data-timer-target="hour">00h</span>:<span id="minute"  class="timerdigits" data-timer-target="minute">00m</span>:<span id="second"  class="timerdigits" data-timer-target="second">00s</span>
              </div>

              <button data-timer-target="stand" data-action="click->timer#stand" class="counterbutton" type="button" name="stand">stand</button>
              <button data-timer-target="pause" data-action="click->timer#pause" class="counterbutton" type="button"name="pause">pause</button>
              <button data-timer-target="finish" data-action="click->timer#reset" class="counterbutton" type="button" name="reset">finish session</button>
            </form>
          </div>
        </nav>
      </div>
        <!--Top menu -->


              <div class="sidebar">
                <div class="d-flex flex-column justify-content-center" style="display: flex; align-items: center;">
                 <%= image_tag "rueckmal-logo.png", alt: "logo" %>
                </div>
                <ul class="navlist" style="display: flex; align-items: center; flex-direction: column;">
                <div class="d-flex flex-column justify-content-center">
                  <li class="navlistitem">
                  <% if user_signed_in? %>
                     <%= link_to user_path(current_user) do   %>
                       <i class="fa-solid fa-house"></i>
                      <% end %>
                    <% end %>
                  </li>
                  <li class="navlistitem">
                    <%= link_to articles_path do   %>
                      <i class="fa-solid fa-lightbulb"></i>
                    <% end %>
                  </li>
                  <li class="navlistitem">
                    <%= link_to exercises_path do   %>
                      <i class="fa-solid fa-person-walking"></i>
                    <% end %>
                  </li>
                  <li class="navlistitem">
                    <%= link_to programs_path do   %>
                      <i class="fa-solid fa-chalkboard-user"></i>
                    <% end %>
                  <br>
                  <li class="navlistitem">
                    <%= link_to destroy_user_session_path, data: {turbo_method: :delete} do  %>
                      <i class="fa-solid fa-right-from-bracket"></i>
                    <% end %>
                  </li>
                  </div>
                </ul>
              </div>


    </div>
      <div class="c">
          <%= render "users/timer" %>
          <%= render "shared/flashes" %>
      </div>

    <%= yield %>

